<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/pretendardmedium"
        android:text="회원정보"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/quokka"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize40Percent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="이름"
        android:textSize="30sp"
        android:fontFamily="@font/pretendardmedium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="@id/iv_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_profile" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:text="ID"
        android:fontFamily="@font/pretendardmedium"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_your_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="20sp"
        android:layout_marginStart="160dp"
        android:fontFamily="@font/pretendardmedium"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:textStyle="bold"
        android:text="전화번호"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        app:layout_constraintEnd_toEndOf="@id/tv_id" />

    <TextView
        android:id="@+id/tv_your_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:fontFamily="@font/pretendardmedium"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_your_id"
        app:layout_constraintTop_toBottomOf="@id/tv_your_id"
        app:layout_constraintEnd_toEndOf="@id/tv_your_id"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약한 역"
        android:textSize="20sp"
        android:fontFamily="@font/pretendardmedium"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/tv_num"
        app:layout_constraintEnd_toEndOf="@id/tv_id"
        />

    <TextView
        android:id="@+id/tv_your_staion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tv_your_id"
        app:layout_constraintTop_toBottomOf="@id/tv_your_num"
        app:layout_constraintEnd_toEndOf="@id/tv_your_id"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
